---
interface Props {
    title: string;
    subtitle?: string;
    image: string;
    category: string;
    readTime: string;
}

const { title, subtitle, image, category, readTime } = Astro.props;
---

<div
    class="relative w-full h-[60vh] min-h-[320px] pt-20 md:pt-0 flex items-center justify-center overflow-hidden"
>
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
        <img
            src={image}
            alt={title}
            loading="eager"
            fetchpriority="high"
            decoding="async"
            class="w-full h-full object-cover opacity-60"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"
        >
        </div>
    </div>

    <!-- Content -->
    <div class="relative z-10 container mx-auto px-4 text-center mt-20">
        <div class="flex items-center justify-center gap-4 mb-6">
            <span
                class="bg-blue-belt-end text-black text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider"
            >
                {category}
            </span>
            <span
                class="text-gray-300 text-sm font-oswald uppercase tracking-widest"
            >
                {readTime}
            </span>
        </div>

        <h1
            class="text-4xl md:text-6xl lg:text-7xl font-black font-oswald text-white uppercase tracking-tighter mb-6 leading-none shadow-xl"
        >
            {title}
        </h1>

        {
            subtitle && (
                <p class="text-xl md:text-2xl text-gray-300 font-medium max-w-3xl mx-auto leading-relaxed drop-shadow-md">
                    {subtitle}
                </p>
            )
        }
    </div>
</div>
