---
import Button from "./Button.astro";
---

<section
    class="relative py-32 bg-deep-space-black overflow-hidden flex items-center justify-center min-h-[600px]"
    id="ready-to-train"
>
    <!-- Background Image -->
    <div class="absolute inset-0 z-0 select-none">
        <img
            src="/images/kidsgroup.webp"
            alt="Kids Training Group"
            class="w-full h-full object-cover opacity-60 mix-blend-overlay filter saturate-150"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-deep-space-black via-transparent to-deep-space-black opacity-90"
        >
        </div>
        <div
            class="absolute inset-0 bg-blue-belt-start/20 mix-blend-color-dodge"
        >
        </div>
    </div>

    <div class="container mx-auto px-4 relative z-10 text-center max-w-4xl">
        <h2
            class="text-5xl md:text-7xl font-black font-oswald uppercase tracking-tighter text-white mb-6 drop-shadow-[0_4px_4px_rgba(0,0,0,0.8)]"
        >
            Ready to <span
                class="text-blue-gradient drop-shadow-[0_0_20px_rgba(0,229,255,0.6)]"
                >Train?</span
            >
        </h2>

        <p
            class="text-xl md:text-2xl text-white font-bold font-body mb-12 max-w-2xl mx-auto leading-relaxed drop-shadow-[0_2px_2px_rgba(0,0,0,0.8)] [text-shadow:_1px_1px_0_rgb(0_0_0_/_100%)]"
        >
            Join the premier Taekwondo school in North West Auckland. Build
            confidence, discipline, and strength with our world-class team.
        </p>

        <div
            class="flex flex-col md:flex-row gap-6 justify-center items-center"
        >
            <Button
                href="https://superior-taekwondo.gymdesk.com/signup"
                variant="primary"
                class="transform scale-125">Start Today</Button
            >
            <Button href="/pricing" variant="secondary">View Pricing</Button>
        </div>
    </div>
</section>
