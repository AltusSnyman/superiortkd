---
import ThreeBackground from './ThreeBackground.jsx';
import Button from './Button.astro';
---

<section class="relative w-full h-screen overflow-hidden flex items-center justify-center bg-black">
<section class="relative w-full h-screen overflow-hidden flex items-center justify-center bg-deep-space-black" id="hero">
    <!-- Video Background -->
    <div class="absolute inset-0 z-0 select-none pointer-events-none">
        <video 
            autoplay 
            loop 
            muted 
            playsinline 
            poster="/images/hero-poster.jpg"
            class="w-full h-full object-cover opacity-60 mix-blend-screen"
        >
            <source src="/videos/hero.mp4" type="video/mp4" />
        </video>
        <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-transparent to-black/80"></div>
    </div>

    <!-- 3D Background Layer (Overlay) -->
    <div class="absolute inset-0 z-0 opacity-80 mix-blend-plus-lighter">
        <ThreeBackground client:load /> 
    </div>
    
    <div class="relative z-10 text-center px-4 max-w-5xl mx-auto flex flex-col items-center gap-6">
        <h1 class="text-5xl md:text-7xl lg:text-9xl font-black font-oswald tracking-tighter text-white drop-shadow-2xl uppercase leading-none opacity-0 animate-fade-in [animation-delay:200ms] [animation-fill-mode:forwards]">
            Unleash Your <br class="hidden md:block" /> <span class="text-blue-gradient drop-shadow-[0_0_15px_rgba(0,229,255,0.4)]">Potential</span>
        </h1>
        
        <h2 class="text-lg md:text-2xl font-bold text-white max-w-2xl opacity-0 animate-slide-up [animation-delay:600ms] [animation-fill-mode:forwards] tracking-wide drop-shadow-[0_2px_2px_rgba(0,0,0,0.8)] [text-shadow:_1px_1px_0_rgb(0_0_0_/_100%)]">
            Train with an Olympian. The Premier Professional Taekwondo School in North West Auckland.
        </h2>
        
        <div class="mt-8 opacity-0 animate-slide-up [animation-delay:900ms] [animation-fill-mode:forwards]">
            <Button href="#intro" variant="primary">Start Your Journey</Button>
        </div>
    </div>
    
    <!-- Immersive Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce flex flex-col items-center gap-2 opacity-70">
        <span class="text-xs font-oswald uppercase tracking-widest text-blue-gradient">Scroll</span>
        <svg class="w-6 h-6 text-blue-belt-end" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
    </div>
</section>
