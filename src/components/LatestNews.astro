---
import { Image } from "astro:assets";
import beginnersHero from "../assets/blog/blog_beginners_hero.png";
import olympicHero from "../assets/blog/blog_olympic_hero.png";
import tournamentHero from "../assets/blog/blog_tournament_hero.png";

const posts = [
    {
        title: "How to Choose a Taekwondo Club in Auckland",
        slug: "how-to-choose-a-taekwondo-club",
        excerpt:
            "Not all clubs are equal. Here are the 7 questions every parent and adult should ask before joining — including one most people never think to ask.",
        category: "Advice",
        image: beginnersHero,
    },
    {
        title: "Adult Taekwondo: Fitness & Self-Defence",
        slug: "adult-taekwondo-fitness",
        excerpt:
            "Burn 400–700 cal per session, build real strength, and develop self-defence capability. No experience needed — Olympian-coached.",
        category: "Fitness",
        image: olympicHero,
    },
    {
        title: "Self-Defence Classes Auckland",
        slug: "self-defence-auckland",
        excerpt:
            "Skip the one-day seminars. Here is why structured Taekwondo training is the only realistic path to genuine self-defence capability.",
        category: "Self-Defence",
        image: tournamentHero,
    },
];
---

<section class="py-24 bg-black relative overflow-hidden">
    <!-- Background Decor -->
    <div
        class="absolute top-0 right-0 w-96 h-96 bg-blue-belt-end/5 rounded-full blur-3xl translate-x-1/2 -translate-y-1/2 pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-16">
            <p
                class="text-blue-belt-end font-bold tracking-widest uppercase text-sm mb-4"
            >
                The Knowledge Hub
            </p>
            <h2
                class="text-4xl md:text-5xl font-black font-oswald text-white uppercase tracking-tighter leading-none"
            >
                Latest <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-blue-belt-start to-blue-belt-end"
                    >Insights</span
                >
            </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                posts.map((post) => (
                    <a
                        href={`/blog/${post.slug}`}
                        class="group block bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:border-blue-belt-end/50 hover:bg-white/10 transition-all duration-300 transform hover:-translate-y-2"
                    >
                        <div class="h-48 bg-gradient-to-br from-gray-800 to-black relative overflow-hidden">
                            <Image
                                src={post.image}
                                alt={post.title}
                                width={403}
                                height={192}
                                loading="lazy"
                                decoding="async"
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                            />
                            <div class="absolute inset-0 bg-blue-belt-end/10 group-hover:bg-blue-belt-end/20 transition-colors pointer-events-none" />
                            <span class="absolute top-4 left-4 bg-blue-belt-end text-black text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider z-10">
                                {post.category}
                            </span>
                        </div>

                        <div class="p-6">
                            <h3 class="text-xl font-bold font-oswald text-white mb-3 group-hover:text-blue-belt-end transition-colors leading-tight">
                                {post.title}
                            </h3>
                            <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                                {post.excerpt}
                            </p>
                            <span class="text-blue-belt-end text-sm font-bold uppercase flex items-center gap-2">
                                Read Article{" "}
                                <span class="group-hover:translate-x-1 transition-transform">
                                    &rarr;
                                </span>
                            </span>
                        </div>
                    </a>
                ))
            }
        </div>

        <div class="mt-12 text-center">
            <a
                href="/blog"
                class="inline-block border border-white/20 hover:border-blue-belt-end text-white hover:text-blue-belt-end font-bold font-oswald uppercase tracking-widest py-3 px-8 rounded transition-all duration-300"
            >
                View All Articles
            </a>
        </div>
    </div>
</section>


