---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import Button from "../../components/Button.astro";
import BlogHero from "../../components/BlogHero.astro";

const title =
    "Taekwondo in New Zealand: The Complete Guide (WT) | Superior Taekwondo";
const description =
    "Discover the thriving world of World Taekwondo (WT) in New Zealand. From national tournaments to finding the best club in Auckland.";

// FAQ Data for Schema
const faqs = [
    {
        question: "What is the governing body for Taekwondo in New Zealand?",
        answer: "Taekwondo New Zealand (TNZ) is the official governing body recognized by World Taekwondo (WT) and the New Zealand Olympic Committee.",
    },
    {
        question: "How popular is Taekwondo in New Zealand?",
        answer: "Taekwondo is one of the most popular martial arts in New Zealand, with thousands of practitioners across the country participating in local, regional, and national events.",
    },
    {
        question: "Are there Taekwondo tournaments in New Zealand?",
        answer: "Yes! There is a busy calendar of events, including the TNZ Open, Regional Championships, and the National Championships, offering opportunities for all levels of athletes.",
    },
    {
        question: "Is Superior Taekwondo a recognized club?",
        answer: "Yes, Superior Taekwondo is a recognized World Taekwondo (WT) club based in North West Auckland, dedicated to high standards of training and student development.",
    },
    {
        question: "Can I represent New Zealand in the Olympics?",
        answer: "Yes, by training at a WT-affiliated club like Superior Taekwondo and progressing through the national ranking system, talented athletes can aspire to represent New Zealand at the Olympic Games.",
    },
];
---

<Layout
    title={title}
    description={description}
    image="/images/blog/blog_world_tkd_hero.webp"
>
    <!-- FAQ Schema -->
    <script
        type="application/ld+json"
        set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "FAQPage",
            mainEntity: faqs.map((faq) => ({
                "@type": "Question",
                name: faq.question,
                acceptedAnswer: {
                    "@type": "Answer",
                    text: faq.answer,
                },
            })),
        })}
    ></script>

    <main class="bg-black min-h-screen pb-12 text-gray-300 font-body">
        <BlogHero
            title="Taekwondo in New Zealand"
            subtitle="A small nation with a big fighting spirit. Explore the history and community of WT Taekwondo across Aotearoa."
            image="/images/blog/blog_world_tkd_hero.webp"
            category="Community"
            readTime="5 Min Read"
        />
        <article class="container mx-auto px-4 max-w-3xl mt-12">
            <!-- Breadcrumb -->
            <nav class="flex mb-8 text-sm text-gray-500">
                <a
                    href="/blog"
                    class="hover:text-blue-belt-end transition-colors">Blog</a
                >
                <span class="mx-2">/</span>
                <span class="text-gray-300">Community</span>
            </nav>

            <!-- Introduction -->
            <section class="mb-16 prose prose-lg prose-invert max-w-none">
                <p
                    class="lead text-2xl text-white font-oswald font-medium mb-6"
                >
                    New Zealand may be a small nation at the bottom of the
                    world, but its spirit in martial arts is mighty. Taekwondo,
                    specifically the World Taekwondo (WT) style, has found a
                    passionate home here.
                </p>
                <p>
                    Thousands of Kiwis, from young children to seasoned masters,
                    tie on their belts every week to practice the "Way of the
                    Foot and Fist". Whether for fitness, self-defense, or the
                    dream of Olympic gold, the Taekwondo community in New
                    Zealand is growing stronger every day.
                </p>
                <p>
                    At <a href="/" class="text-blue-belt-end hover:underline"
                        >Superior Taekwondo</a
                    >, we are proud to be a driving force in this community,
                    particularly serving the <strong>North West Auckland</strong
                    > regions of <strong>Helensville</strong>, <strong
                        >Kaukapakapa</strong
                    >, and <strong>Waimauku</strong>.
                </p>
            </section>

            <!-- The Governing Body -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-6 border-l-4 border-blue-belt-end pl-4"
                >
                    Taekwondo New Zealand (TNZ)
                </h2>
                <div class="flex flex-col md:flex-row gap-8 items-center">
                    <div class="w-full md:w-2/3">
                        <p class="mb-4 text-gray-300">
                            <strong>Taekwondo New Zealand (TNZ)</strong> is the only
                            governing body for the sport recognized by the New Zealand
                            Olympic Committee (NZOC) and Sport New Zealand. It is
                            responsible for:
                        </p>
                        <ul class="list-disc pl-6 space-y-2 text-gray-400">
                            <li>
                                Selecting national teams for events like the
                                Olympics and World Championships.
                            </li>
                            <li>
                                Organizing the National Taekwondo Championships.
                            </li>
                            <li>
                                Ensuring clubs adhere to safe sport practices
                                and ethical standards.
                            </li>
                            <li>
                                Promoting the growth of WT-style Taekwondo
                                across the country.
                            </li>
                        </ul>
                    </div>
                    <div
                        class="w-full md:w-1/3 bg-white/5 p-6 rounded-xl border border-white/10 text-center"
                    >
                        <blockquote
                            class="text-lg italic text-blue-belt-end mb-4"
                        >
                            "Taekwondo is for everyone."
                        </blockquote>
                        <p class="text-sm text-gray-500">
                            By training at a TNZ-aligned club like Superior
                            Taekwondo, you ensure your grades are nationally
                            recognized.
                        </p>
                    </div>
                </div>
            </section>

            <!-- Major Tournaments -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-6 border-l-4 border-blue-belt-end pl-4"
                >
                    The Competitive Landscape
                </h2>
                <p class="mb-6 text-gray-300">
                    For those with a competitive spirit, New Zealand offers a
                    robust circuit of tournaments. Competing allows students to
                    test their skills, build confidence, and meet friends from
                    across the country.
                </p>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div
                        class="bg-gradient-to-br from-gray-900 to-black p-6 rounded-xl border border-white/10"
                    >
                        <h3 class="text-xl font-bold text-white mb-2">
                            The TNZ Open
                        </h3>
                        <p class="text-sm text-gray-400">
                            Often held in Auckland, this is one of the premier
                            events on the calendar, attracting top talent from
                            New Zealand and often Australia and the Pacific
                            Islands. It features both Kyorugi (sparring) and
                            Poomsae (patterns).
                        </p>
                    </div>
                    <div
                        class="bg-gradient-to-br from-gray-900 to-black p-6 rounded-xl border border-white/10"
                    >
                        <h3 class="text-xl font-bold text-white mb-2">
                            The National Championships
                        </h3>
                        <p class="text-sm text-gray-400">
                            The pinnacle of domestic competition. Winners here
                            earn the title of National Champion and ranking
                            points for national team selection. It is a
                            prestigious event that showcases the best of the
                            best.
                        </p>
                    </div>
                    <div
                        class="bg-gradient-to-br from-gray-900 to-black p-6 rounded-xl border border-white/10"
                    >
                        <h3 class="text-xl font-bold text-white mb-2">
                            Regional Open Days
                        </h3>
                        <p class="text-sm text-gray-400">
                            Throughout the year, various clubs host regional
                            tournaments. These are perfect for beginners to get
                            their first taste of competition in a supportive and
                            friendly environment.
                        </p>
                    </div>
                    <div
                        class="bg-gradient-to-br from-gray-900 to-black p-6 rounded-xl border border-white/10"
                    >
                        <h3 class="text-xl font-bold text-white mb-2">
                            International Pathways
                        </h3>
                        <p class="text-sm text-gray-400">
                            Elite Kiwi athletes travel to events like the
                            Australian Open, US Open, and Pacific Games.
                            Superior Taekwondo supports athletes with ambitions
                            to compete on the world stage.
                        </p>
                    </div>
                </div>
                <div class="mt-8 text-center">
                    <Button href="/tournaments" variant="primary"
                        >See Upcoming Tournaments</Button
                    >
                </div>
            </section>

            <!-- Superior Taekwondo's Role -->
            <section
                class="mb-16 bg-white/5 border border-white/10 rounded-2xl p-8"
            >
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-6 text-center"
                >
                    Superior Taekwondo: Leading the Way in Auckland
                </h2>
                <div class="max-w-3xl mx-auto space-y-6 text-gray-300">
                    <p>
                        In the bustling landscape of New Zealand martial arts, <strong
                            >Superior Taekwondo</strong
                        > stands out as a beacon of excellence. Located in the beautiful
                        North West of Auckland, we are more than just a club; we
                        are a family.
                    </p>
                    <h3 class="text-2xl text-blue-belt-end font-oswald mb-2">
                        Why We Are a Top Choice
                    </h3>
                    <ul class="space-y-4">
                        <li class="flex gap-3">
                            <span
                                class="bg-blue-belt-end/20 text-blue-belt-end rounded-full w-6 h-6 flex items-center justify-center font-bold text-xs mt-1"
                                >1</span
                            >
                            <span
                                ><strong>Authentic WT Curriculum:</strong> We teach
                                the official Olympic style, ensuring your skills
                                are relevant globally.</span
                            >
                        </li>
                        <li class="flex gap-3">
                            <span
                                class="bg-blue-belt-end/20 text-blue-belt-end rounded-full w-6 h-6 flex items-center justify-center font-bold text-xs mt-1"
                                >2</span
                            >
                            <span
                                ><strong>Community Focus:</strong> We are deeply
                                rooted in Helensville and Kaukapakapa, providing
                                a safe and positive environment for local youth and
                                families.</span
                            >
                        </li>
                        <li class="flex gap-3">
                            <span
                                class="bg-blue-belt-end/20 text-blue-belt-end rounded-full w-6 h-6 flex items-center justify-center font-bold text-xs mt-1"
                                >3</span
                            >
                            <span
                                ><strong>Holistic Development:</strong> Our "Strength
                                to Nurture" (STN) philosophy ensures we build strong
                                characters, not just strong fighters.</span
                            >
                        </li>
                    </ul>
                </div>
            </section>

            <!-- FAQ Section -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-8 text-center"
                >
                    Frequently Asked Questions
                </h2>
                <div class="space-y-6">
                    {
                        faqs.map((faq) => (
                            <div class="bg-white/5 border border-white/10 rounded-xl p-6 hover:border-blue-belt-end/50 transition-colors">
                                <h3 class="text-xl font-bold font-oswald text-white mb-2">
                                    {faq.question}
                                </h3>
                                <p class="text-gray-400">{faq.answer}</p>
                            </div>
                        ))
                    }
                </div>
            </section>

            <!-- CTA -->
            <section
                class="text-center bg-blue-belt-end/10 rounded-3xl p-12 border border-blue-belt-end/20"
            >
                <h2
                    class="text-3xl md:text-4xl font-black font-oswald text-white uppercase mb-6"
                >
                    Join a Top NZ Taekwondo Club
                </h2>
                <p class="text-gray-300 max-w-2xl mx-auto mb-8 text-lg">
                    Whether you want to be a national champion or simply get
                    fit, your journey starts here at Superior Taekwondo.
                </p>
                <div class="flex flex-col sm:flex-row justify-center gap-4">
                    <Button
                        href="/pricing"
                        variant="primary"
                        class="text-lg px-8 py-4 shadow-[0_0_20px_rgba(0,229,255,0.4)] hover:shadow-[0_0_30px_rgba(0,229,255,0.6)]"
                    >
                        Start Your Trial
                    </Button>
                    <Button
                        href="/contact"
                        variant="outline"
                        class="text-lg px-8 py-4"
                    >
                        Contact Us
                    </Button>
                </div>
            </section>
        </article>
    </main>
    <Footer />
</Layout>
