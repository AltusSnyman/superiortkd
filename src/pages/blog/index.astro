---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";

// Import blog hero images for optimization
import beginnersHero from "../../assets/blog/blog_beginners_hero.png";
import olympicHero from "../../assets/blog/blog_olympic_hero.png";
import tournamentHero from "../../assets/blog/blog_tournament_hero.png";
import gradingHero from "../../assets/blog/blog_grading_hero.png";
import firstClassHero from "../../assets/blog/blog_first_class_hero.png";
import historyHero from "../../assets/blog/blog_history_hero.png";
import worldTkdHero from "../../assets/blog/blog_world_tkd_hero.png";
import gradingSystemHero from "../../assets/blog/blog_grading_system_hero.png";

const posts = [
  // New high-intent posts (2026 SEO sprint)
  {
    title: "How to Choose a Taekwondo Club in Auckland",
    slug: "how-to-choose-a-taekwondo-club",
    excerpt: "Not all clubs are equal. Here are the 7 questions every parent and adult should ask before joining — including one most people never think to ask.",
    category: "Advice",
    image: beginnersHero
  },
  {
    title: "Adult Taekwondo: Fitness, Confidence & Self-Defence",
    slug: "adult-taekwondo-fitness",
    excerpt: "Burn 400–700 calories per session, build functional strength, and develop real self-defence skills. No experience needed.",
    category: "Fitness",
    image: olympicHero
  },
  {
    title: "Self-Defence Classes Auckland: What Actually Works",
    slug: "self-defence-auckland",
    excerpt: "Skip the one-day seminars. Here is why consistent Taekwondo training is the only realistic path to genuine self-defence capability.",
    category: "Self-Defence",
    image: tournamentHero
  },
  // Existing guides
  {
    title: "Taekwondo for Beginners: A Complete Guide",
    slug: "taekwondo-for-beginners",
    excerpt: "Thinking about starting? Here is everything you need to know about the journey from White Belt to Black Belt.",
    category: "Guides",
    image: beginnersHero
  },
  {
    title: "Preparing for Your Belt Test",
    slug: "preparing-for-belt-test",
    excerpt: "Nervous about grading? Use our checklist to prepare your patterns, sparring, and mindset for success.",
    category: "Training",
    image: gradingHero
  },
  {
    title: "Your First Class: What to Expect",
    slug: "first-taekwondo-class",
    excerpt: "Walking into the dojang for the first time? We break down exactly what happens in your first class.",
    category: "New Students",
    image: firstClassHero
  },
  // Pillar Content
  {
    title: "The History of Taekwondo",
    slug: "history-of-taekwondo",
    category: "Community",
    image: historyHero
  },
  {
    title: "Olympic Taekwondo",
    slug: "olympic-taekwondo",
    excerpt: "The ultimate stage. Understand weight classes, scoring systems, and the pathway from club level to the Olympic Games.",
    image: olympicHero,
    category: "Sport"
  },
  {
    title: "World Taekwondo (WT)",
    slug: "world-taekwondo",
    excerpt: "Meet the global governing body. Learn about their mission, the Kukkiwon connection, and why alignment matters.",
    image: worldTkdHero,
    category: "Education"
  },
  {
    title: "Grading & Belt System",
    slug: "taekwondo-grading-system",
    excerpt: "A complete visual guide to the belt colors, meanings, and the timeline from White Belt to Black Belt.",
    image: gradingSystemHero,
    category: "Guides"
  },
  {
    title: "2026 Competition Rules",
    slug: "competition-rules",
    excerpt: "Stay ahead of the game with our breakdown of the latest rules, including new scoring for turning kicks and penalty changes.",
    image: tournamentHero,
    category: "Sport"
  },
  {
    title: "WT vs ITF: The Difference",
    slug: "wt-vs-itf-taekwondo",
    excerpt: "Confused by the different styles? We explain the key technical and historical differences between World Taekwondo and ITF.",
    image: worldTkdHero,
    category: "Education"
  }
];


const title = "Superior Taekwondo Blog | Insights, Tips & News";
---

<Layout title={title} description="Explore the Superior Taekwondo blog for expert advice on martial arts training, Olympic-level tips, grading preparation, and club news in North West Auckland.">
  <main class="bg-black min-h-screen pt-24 pb-12 text-gray-300 font-body">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <header class="mb-16 text-center">
        <p class="text-blue-belt-end font-bold tracking-widest uppercase text-sm mb-4">The Knowledge Hub</p>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black font-oswald text-white uppercase tracking-tighter mb-6 leading-none">
          Superior <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-belt-start to-blue-belt-end">Insights</span>
        </h1>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          Deep dives into training, philosophy, and the martial arts lifestyle.
        </p>
      </header>

      <!-- Blog Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="group block bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:border-blue-belt-end/50 hover:bg-white/10 transition-all duration-300 transform hover:-translate-y-2">
            <!-- Image Container -->
            <div class="h-48 bg-gradient-to-br from-gray-800 to-black relative overflow-hidden">
                {post.image ? (
                  <Image 
                    src={post.image} 
                    alt={post.title} 
                    width={400}
                    height={400}
                    loading="lazy"
                    decoding="async"
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  />
                ) : (
                  <div class="absolute inset-0 bg-gradient-to-br from-gray-800 to-black"></div>
                )}
                <div class="absolute inset-0 bg-blue-belt-end/10 group-hover:bg-blue-belt-end/20 transition-colors pointer-events-none"></div>
                <!-- Category Badge -->
                <span class="absolute top-4 left-4 bg-blue-belt-end text-black text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider z-10">
                    {post.category}
                </span>
            </div>
            
            <div class="p-6">
                <h2 class="text-2xl font-bold font-oswald text-white mb-3 group-hover:text-blue-belt-end transition-colors leading-tight">
                    {post.title}
                </h2>
                <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                    {post.excerpt}
                </p>
                <span class="text-blue-belt-end text-sm font-bold uppercase flex items-center gap-2">
                    Read Article <span class="group-hover:translate-x-1 transition-transform">&rarr;</span>
                </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
