---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import Button from "../../components/Button.astro";
import BlogHero from "../../components/BlogHero.astro";
import RelatedContent from "../../components/RelatedContent.astro";

const title =
    "The History of Taekwondo: Ancient Roots to Olympic Sport | Superior Taekwondo";
const description =
    "Explore the 2,000-year journey of Taekwondo. From the Hwarang warriors of ancient Korea to the gymnasiums of North West Auckland.";

const blogSchema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: title,
    description: description,
    image: "https://superiortkd.co.nz/images/blog/blog_history_hero.webp",
    datePublished: "2025-02-01",
    dateModified: "2026-02-21",
    author: {
        "@type": "Person",
        name: "Andrea Kilday",
        url: "https://superiortkd.co.nz",
    },
    publisher: {
        "@type": "Organization",
        name: "Superior Taekwondo",
        url: "https://superiortkd.co.nz",
    },
    mainEntityOfPage: {
        "@type": "WebPage",
        "@id": "https://superiortkd.co.nz/blog/history-of-taekwondo",
    },
});
const headContent = `<script type="application/ld+json">${blogSchema}<\/script>`;

// FAQ Data for Schema
const faqs = [
    {
        question: "When was Taekwondo invented?",
        answer: "While its roots go back over 2,000 years to ancient Korean martial arts like Subak and Taekkyeon, the name 'Taekwondo' was officially adopted on April 11, 1955, by a committee of Korean masters.",
    },
    {
        question: "Who is the father of Taekwondo?",
        answer: "General Choi Hong Hi is widely credited as the 'Father of Taekwondo' for his role in naming and organizing the art, though many masters from the original 9 Kwans contributed significantly to its development.",
    },
    {
        question: "Why are there different styles of Taekwondo (WT vs ITF)?",
        answer: "The split occurred due to political and philosophical differences in the 1960s and 70s. ITF (International Taekwon-Do Federation) stuck to General Choi's original traditional style, while WT (World Taekwondo) developed into the modern Olympic sport we practice today.",
    },
    {
        question: "When did Taekwondo become an Olympic sport?",
        answer: "Taekwondo debuted as a demonstration sport at the 1988 Seoul Olympics and became an official medal sport at the 2000 Sydney Olympics.",
    },
    {
        question: "Is Taekwondo related to Karate?",
        answer: "Yes, during the Japanese occupation of Korea, many Korean masters studied Karate. Modern Taekwondo blends these linear strikes with the circular, fluid kicking techniques of indigenous Korean arts like Taekkyeon.",
    },
];
---

<Layout
    title={title}
    description={description}
    image="/images/blog/blog_history_hero.webp"
    headContent={headContent}
    breadcrumbs={[
        { name: "Home", url: "https://superiortkd.co.nz" },
        { name: "Blog", url: "https://superiortkd.co.nz/blog" },
        {
            name: "History of Taekwondo",
            url: "https://superiortkd.co.nz/blog/history-of-taekwondo",
        },
    ]}
>
    <!-- Breadcrumb Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://superiortkd.co.nz/" },
            { "@type": "ListItem", "position": 2, "name": "Blog", "item": "https://superiortkd.co.nz/blog/" },
            { "@type": "ListItem", "position": 3, "name": "The History of Taekwondo: Ancient Roots to Olympic Sport", "item": `https://superiortkd.co.nz/blog/${"history-of-taekwondo"}` }
        ]
    })}></script>

    <!-- FAQ Schema -->
    <script
        type="application/ld+json"
        set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "FAQPage",
            mainEntity: faqs.map((faq) => ({
                "@type": "Question",
                name: faq.question,
                acceptedAnswer: {
                    "@type": "Answer",
                    text: faq.answer,
                },
            })),
        })}
    ></script>

    <main class="bg-black min-h-screen pb-12 text-gray-300 font-body">
        <BlogHero
            title="The History of Taekwondo"
            subtitle="Taekwondo is not just a sport; it is a legacy. Its roots run deep into the history of the Korean peninsula, surviving wars, occupation, and modernization."
            image="/images/blog/blog_history_hero.webp"
            category="History"
            readTime="12 Min Read"
        />
        <article class="container mx-auto px-4 max-w-3xl mt-12">
            <!-- Breadcrumb -->
            <nav class="flex mb-8 text-sm text-gray-500">
                <a
                    href="/blog"
                    class="hover:text-blue-belt-end transition-colors">Blog</a
                >
                <span class="mx-2">/</span>
                <span class="text-gray-300">History</span>
            </nav>

            <!-- Introduction -->
            <section class="mb-16 prose prose-lg prose-invert max-w-none">
                <p
                    class="lead text-2xl text-white font-oswald font-medium mb-6"
                >
                    To practice Taekwondo is to participate in a history that
                    spans millennia. Every bow, every form, and every command in
                    the dojang echoes the traditions of the past.
                </p>
                <p>
                    At <strong>Superior Taekwondo</strong>, we teach more than
                    just kicking and punching. We teach a heritage. Whether you
                    are training in our <strong>Helensville</strong> dojang or competing
                    internationally, you are part of a lineage that has survived
                    wars, occupations, and rigorous modernization to become the Olympic
                    sport we love today.
                </p>
            </section>

            <!-- Ancient Roots -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-6 border-l-4 border-blue-belt-end pl-4"
                >
                    The Three Kingdoms (57 BC - 668 AD)
                </h2>
                <div class="space-y-6 text-gray-300">
                    <p>
                        The history of Korean martial arts begins in the era of
                        the Three Kingdoms: <strong>Goguryeo</strong>, <strong
                            >Baekje</strong
                        >, and <strong>Silla</strong>. Archaeological findings,
                        such as murals in the Muyongchong (Royal Tomb of the
                        Dancers), depict warriors engaging in unarmed combat
                        resembling modern Taekwondo.
                    </p>
                    <p>Two primary indigenous arts emerged during this time:</p>
                    <ul class="list-disc pl-6 space-y-2">
                        <li>
                            <strong>Subak (ÏàòÎ∞ï):</strong> A fighting style focusing
                            on hand strikes and grappling.
                        </li>
                        <li>
                            <strong>Taekkyeon (ÌÉùÍ≤¨):</strong> A fluid, rhythmic
                            art emphasizing high, fluid kicks and footwork. This
                            art is the primary ancestor of Taekwondo's dynamic kicking
                            style.
                        </li>
                    </ul>
                </div>
            </section>

            <!-- The Hwarang -->
            <section
                class="mb-16 bg-white/5 border border-white/10 rounded-2xl p-8"
            >
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-6 text-center"
                >
                    The Hwarang Warriors
                </h2>
                <p class="text-gray-300 mb-6 text-center max-w-2xl mx-auto">
                    The Silla kingdom, though the smallest, became powerful
                    through its youth warrior corps known as the <strong
                        >Hwarang</strong
                    > ("Flowering Knights").
                </p>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
                    <div>
                        <p class="mb-4">
                            The Hwarang were young noblemen trained in
                            philosophy, poetry, horse riding, swordsmanship, and
                            unarmed combat (Subak). They were renowned for their
                            discipline and code of ethics.
                        </p>
                        <p>
                            Their five-point code of conduct, the <em
                                >Sesok Ogye</em
                            >, laid the spiritual foundation for modern
                            Taekwondo philosophy:
                        </p>
                        <ol
                            class="list-decimal pl-6 mt-4 space-y-2 font-bold text-gray-400"
                        >
                            <li>Loyalty to one's country</li>
                            <li>Respect for one's parents</li>
                            <li>Faithfulness to one's spouse/friends</li>
                            <li>Courage in battle</li>
                            <li>
                                Justice in taking life (avoiding unnecessary
                                killing)
                            </li>
                        </ol>
                    </div>
                    <div
                        class="bg-black/40 p-6 rounded-xl border border-white/5"
                    >
                        <blockquote
                            class="text-xl italic text-blue-belt-end mb-4"
                        >
                            "They trained consistently throughout the four
                            seasons, honing their bodies and minds to protect
                            their nation."
                        </blockquote>
                        <p class="text-sm text-gray-500">
                            - Ancient Historical Records
                        </p>
                    </div>
                </div>
            </section>

            <!-- Dark Ages & Occupation -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-6 border-l-4 border-blue-belt-end pl-4"
                >
                    The Dark Ages & Rebirth
                </h2>
                <div class="space-y-6 text-gray-300">
                    <h3 class="text-xl text-white font-oswald mb-2">
                        The Joseon Dynasty
                    </h3>
                    <p>
                        During the Joseon Dynasty (1392-1910), Confucianism
                        replaced Buddhism as the state ideology. Scholarly
                        pursuits were valued over martial arts, causing Subak
                        and Taekkyeon to decline, practiced only as folk games
                        by commoners.
                    </p>

                    <h3 class="text-xl text-white font-oswald mb-2 mt-8">
                        The Japanese Occupation (1910-1945)
                    </h3>
                    <p>
                        Korea's annexation by Japan brought a ban on all Korean
                        cultural practices, including martial arts. However,
                        this period paradoxically shaped modern Taekwondo. Many
                        Koreans studying in Japan learned <strong>Karate</strong
                        > (Kong Soo Do).
                    </p>
                    <p>
                        When Korea was liberated in 1945, masters returned with
                        a unique blend of skills: the linear, powerful strikes
                        of Karate combined with the fluid, high-kicking
                        traditions of ancient Taekkyeon.
                    </p>
                </div>
            </section>

            <!-- Unification -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-6 border-l-4 border-blue-belt-end pl-4"
                >
                    The Birth of "Taekwondo"
                </h2>
                <p class="mb-4 text-gray-300">
                    Post-liberation, five major martial arts schools (Kwans)
                    opened: <em
                        >Chung Do Kwan, Moo Duk Kwan, Yun Moo Kwan, Chang Moo
                        Kwan, and Song Moo Kwan</em
                    >. Later, four more joined to form the <strong
                        >9 original Kwans</strong
                    >.
                </p>
                <div
                    class="relative pl-8 border-l-2 border-blue-belt-end/30 space-y-8 my-8"
                >
                    <div class="relative">
                        <span
                            class="absolute -left-[41px] top-0 w-6 h-6 rounded-full bg-blue-belt-start border-4 border-black"
                        ></span>
                        <h4 class="text-xl font-bold text-white mb-1">
                            1955: The Naming
                        </h4>
                        <p class="text-sm text-gray-400">
                            General Choi Hong Hi proposed the name "Taekwondo"
                            to a committee. It was chosen for its similarity to
                            "Taekkyeon" and its descriptive meaning (Foot, Fist,
                            Way).
                        </p>
                    </div>
                    <div class="relative">
                        <span
                            class="absolute -left-[41px] top-0 w-6 h-6 rounded-full bg-blue-belt-end border-4 border-black"
                        ></span>
                        <h4 class="text-xl font-bold text-white mb-1">
                            1966: ITF Formed
                        </h4>
                        <p class="text-sm text-gray-400">
                            The International Taekwon-Do Federation was
                            established to promote the art globally.
                        </p>
                    </div>
                    <div class="relative">
                        <span
                            class="absolute -left-[41px] top-0 w-6 h-6 rounded-full bg-white border-4 border-black"
                        ></span>
                        <h4 class="text-xl font-bold text-white mb-1">
                            1973: WT Formed
                        </h4>
                        <p class="text-sm text-gray-400">
                            The World Taekwondo Federation (now WT) was
                            established in Seoul, separating the martial art
                            into two distinct paths: the traditional ITF style
                            and the sport-focused WT style.
                        </p>
                    </div>
                </div>
            </section>

            <!-- Olympic Era -->
            <section
                class="mb-16 bg-gradient-to-br from-blue-900/20 to-black border border-white/10 rounded-2xl p-8"
            >
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-6 text-center"
                >
                    The Olympic Era
                </h2>
                <div class="flex flex-col md:flex-row gap-8 items-center">
                    <div class="w-full md:w-1/2">
                        <p class="mb-4 text-gray-300">
                            World Taekwondo (WT) focused heavily on sport
                            application. This dedication paid off when Taekwondo
                            appeared as a demonstration sport at the <strong
                                >1988 Seoul Olympics</strong
                            > and <strong>1992 Barcelona Olympics</strong>.
                        </p>
                        <p class="mb-4 text-gray-300">
                            It became an official full-medal sport at the <strong
                                >2000 Sydney Olympics</strong
                            >, cementing its status as a global phenomenon.
                        </p>
                        <p class="text-gray-300">
                            Recent innovations include electronic scoring
                            systems (PSS) introduced in 2012 to ensure fairness,
                            making the sport faster and more transparent.
                        </p>
                    </div>
                    <div class="w-full md:w-1/2">
                        <div
                            class="bg-black/50 p-6 rounded-xl border border-white/10 text-center"
                        >
                            <span class="text-6xl mb-4 block">ü•á</span>
                            <h3 class="text-xl font-bold text-white mb-2">
                                Why We Choose WT
                            </h3>
                            <p class="text-sm text-gray-400">
                                Superior Taekwondo is proud to be a WT-style
                                club. This connects our students to the official
                                Olympic pathway, allowing access to sanctioned
                                tournaments, widely recognized black belt
                                certification (Kukkiwon), and the most modern
                                training methodologies.
                            </p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Local Connection -->
            <section class="mb-16 text-center">
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-6"
                >
                    Continuing the Legacy in North West Auckland
                </h2>
                <p class="text-lg text-gray-300 max-w-3xl mx-auto mb-8">
                    History is not just about the past; it is being written
                    every day in the dojang. When you train at Superior
                    Taekwondo in <strong>Helensville</strong>, you are carrying
                    the torch passed down from the Hwarang warriors through
                    generations of masters.
                </p>
                <p class="text-gray-400 max-w-2xl mx-auto mb-8">
                    Are you ready to become part of this history?
                </p>
                <div class="flex flex-col sm:flex-row justify-center gap-4">
                    <Button href="http://superior-taekwondo.gymdesk.com/schedule" variant="primary"
                        >View Class Schedule</Button
                    >
                    <Button href="/contact" variant="outline">Contact Us</Button
                    >
                </div>
            </section>

            <!-- FAQ Section -->
            <section class="mb-16">
                <h2
                    class="text-3xl font-bold font-oswald text-white uppercase mb-8 text-center"
                >
                    Historical Notes & FAQ
                </h2>
                <div class="space-y-6">
                    {
                        faqs.map((faq) => (
                            <div class="bg-white/5 border border-white/10 rounded-xl p-6 hover:border-blue-belt-end/50 transition-colors">
                                <h3 class="text-xl font-bold font-oswald text-white mb-2">
                                    {faq.question}
                                </h3>
                                <p class="text-gray-400">{faq.answer}</p>
                            </div>
                        ))
                    }
                </div>
            </section>
        </article>
    </main>
    <RelatedContent
        posts={[
            { title: "What is World Taekwondo (WT)?", slug: "world-taekwondo" },
            { title: "WT vs ITF Taekwondo", slug: "wt-vs-itf-taekwondo" },
        ]}
        actions={[
            { label: "View Class Schedule", href: "http://superior-taekwondo.gymdesk.com/schedule" },
            { label: "Contact the Club", href: "/contact" },
        ]}
    />
    <Footer />
</Layout>
