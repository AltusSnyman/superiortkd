---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import PricingSection from "../components/PricingSection.tsx";

const pricingFaqSchema = {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    mainEntity: [
        {
            "@type": "Question",
            name: "How much do Taekwondo classes cost at Superior Taekwondo?",
            acceptedAnswer: {
                "@type": "Answer",
                text: "Weekly memberships start from $27 per week for one session, up to $39 per week for unlimited sessions. Family sibling discounts are available. Term-based concession options are also offered. A one-time sign-up fee of $25 applies to weekly memberships.",
            },
        },
        {
            "@type": "Question",
            name: "Is there a family discount for multiple children?",
            acceptedAnswer: {
                "@type": "Answer",
                text: "Yes. Superior Taekwondo offers sibling deals for families with 2, 3, or 4 children. The sibling deals cover unlimited sessions at reduced combined rates compared to individual memberships.",
            },
        },
        {
            "@type": "Question",
            name: "Can I pay per-term instead of weekly?",
            acceptedAnswer: {
                "@type": "Answer",
                text: "Yes. We offer per-term options including 1 session per week for $250 per 10 weeks, or unlimited sessions per term for $350 per 10 weeks. A concession card (10 sessions) is also available for $265.",
            },
        },
        {
            "@type": "Question",
            name: "How is the weekly membership collected?",
            acceptedAnswer: {
                "@type": "Answer",
                text: "Weekly memberships are collected via direct debit. Two weeks' written notice by email is required to cancel or place a membership on hold.",
            },
        },
        {
            "@type": "Question",
            name: "Can I attend any location with my membership?",
            acceptedAnswer: {
                "@type": "Answer",
                text: "Yes. All Superior Taekwondo membership options cover access to all three locations: Kaukapakapa, Helensville, and Waimauku.",
            },
        },
    ],
};

const plans = [
    {
        category: "Weekly Memberships",
        options: [
            {
                title: "1 Session Per Week",
                frequency: "Ongoing",
                description: "1 Session / week",
                sport: "Taekwondo",
                price: "$27.00",
                period: "/ Week",
                signup: "+ $25.00 Sign-up",
            },
            {
                title: "Unlimited Sessions",
                frequency: "Ongoing",
                description: "Unlimited",
                sport: "Taekwondo",
                price: "$39.00",
                period: "/ Week",
                signup: "+ $25.00 Sign-up",
                recommended: true,
            },
            {
                title: "Sibling Deal - 1 Session Each",
                frequency: "Ongoing",
                description: "2 Sessions / week",
                sport: "Taekwondo",
                price: "$54.00",
                period: "/ Week",
                signup: "+ $25.00 Sign-up",
            },
            {
                title: "Sibling Deal of 2 - Unlimited",
                frequency: "Ongoing",
                description: "Unlimited",
                sport: "Taekwondo",
                price: "$66.00",
                period: "/ Week",
                signup: "+ $25.00 Sign-up",
            },
            {
                title: "Sibling Deal of 3 - Unlimited",
                frequency: "Ongoing",
                description: "Unlimited",
                sport: "Taekwondo",
                price: "$77.00",
                period: "/ Week",
                signup: "+ $25.00 Sign-up",
            },
            {
                title: "Sibling of 4 - Unlimited",
                frequency: "Ongoing",
                description: "Unlimited",
                sport: "Taekwondo",
                price: "$88.00",
                period: "/ Week",
                signup: "+ $25.00 Sign-up",
            },
        ],
    },
    {
        category: "Term & Concession",
        options: [
            {
                title: "Concession Card",
                frequency: "5 months",
                description: "10 Sessions",
                sport: "Taekwondo",
                price: "$265.00",
                period: "Total",
                signup: "",
            },
            {
                title: "1 Session a Week Per Term",
                frequency: "Ongoing",
                description: "1 Session / week",
                sport: "Taekwondo",
                price: "$250.00",
                period: "/ 10 Weeks",
                signup: "+ $25.00 Sign-up",
            },
            {
                title: "Unlimited Sessions Per Term",
                frequency: "Ongoing",
                description: "Unlimited",
                sport: "Taekwondo",
                price: "$350.00",
                period: "/ 10 Weeks",
                signup: "+ $25.00 Sign-up",
            },
        ],
    },
];
---

<Layout
    title="Pricing & Memberships | Superior Taekwondo"
    description="Affordable Taekwondo class pricing and membership options. Weekly plans, term concessions, and family discounts available."
>
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@graph": [
                {
                    "@type": "Service",
                    "serviceType": "Adult Taekwondo Classes",
                    "provider": {
                        "@type": "MartialArtsSchool",
                        "name": "Superior Taekwondo"
                    },
                    "description": "Taekwondo training for adults focusing on self-defense, fitness, STN (Strength to Nurture), and belt progression.",
                    "areaServed": "Helensville"
                },
                {
                    "@type": "Service",
                    "serviceType": "Junior Taekwondo Classes",
                    "provider": {
                        "@type": "MartialArtsSchool",
                        "name": "Superior Taekwondo"
                    },
                    "description": "Martial arts classes for juniors developing discipline, respect, and physical coordination.",
                    "areaServed": "Helensville"
                },
                {
                    "@type": "Service",
                    "serviceType": "Tiny Tigers Classes",
                    "provider": {
                        "@type": "MartialArtsSchool",
                        "name": "Superior Taekwondo"
                    },
                    "description": "Fun and engaging martial arts introduction for young children (ages 4-6).",
                    "areaServed": "Helensville"
                },
                {
                    "@type": "Service",
                    "serviceType": "Fitness Classes",
                    "provider": {
                        "@type": "MartialArtsSchool",
                        "name": "Superior Taekwondo"
                    },
                    "description": "High-intensity fitness classes incorporating martial arts movements for cardio and strength.",
                    "areaServed": "Helensville"
                }
            ]
        }
    </script>
    <script
        type="application/ld+json"
        set:html={JSON.stringify(pricingFaqSchema)}
    ></script>
    <main class="bg-deep-space-black min-h-screen pt-24 pb-12">
        <!-- React Pricing Component (Handles header and content internally now) -->
        <PricingSection client:load plans={plans} />

        <!-- Terms & Conditions (Outside React component to keep it simple or moved in?) 
         Actually, the previous PricingGrid had it inside the main container. 
         PricingSection now has a container inside. I will place Terms below it.
    -->
        <div class="container mx-auto px-4 pb-24">
            <div
                class="max-w-4xl mx-auto bg-white/5 border border-white/10 rounded-xl p-8 text-gray-400 font-body text-sm leading-relaxed relative z-10"
            >
                <h3
                    class="text-white font-oswald font-bold uppercase tracking-wide text-lg mb-4"
                >
                    Important Information
                </h3>
                <ul class="list-disc pl-5 space-y-2">
                    <li>
                        Memberships are collected weekly by the way of direct
                        debit.
                    </li>
                    <li>
                        If you attended once a week and the particular day falls
                        on a public holiday or facilities are closed you are
                        encouraged to come to any other class as a make up
                        session.
                    </li>
                    <li>
                        2 week notice by email for cancelling membership or
                        putting on hold.
                    </li>
                    <li>
                        All locations included: Kaukapakapa, Helensville, and
                        Waimauku.
                    </li>
                </ul>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
