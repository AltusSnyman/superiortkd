---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Button from "../components/Button.astro";
import TrustBar from "../components/TrustBar.astro";

const title =
    "About Superior Taekwondo | Olympian-Led Club, North West Auckland";
const description =
    "Learn the story behind Superior Taekwondo. Led by 2016 Rio Olympian Andrea Kilday, we are North West Auckland's premier World Taekwondo club ‚Äî built to develop champions in sport and life.";

const aboutSchema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "AboutPage",
    name: title,
    description: description,
    url: "https://superiortkd.co.nz/about",
    mainEntity: {
        "@type": "MartialArtsSchool",
        name: "Superior Taekwondo",
        description:
            "Premier World Taekwondo (WT) club in North West Auckland. Developing champions in sport and life under the guidance of 2016 Rio Olympian Andrea Kilday.",
        foundingDate: "2016",
        slogan: "Constructing Champions",
        url: "https://superiortkd.co.nz",
        telephone: "+64275201613",
        address: {
            "@type": "PostalAddress",
            streetAddress: "94 Mill Road",
            addressLocality: "Helensville",
            addressRegion: "Auckland",
            postalCode: "0800",
            addressCountry: "NZ",
        },
        founder: {
            "@type": "Person",
            name: "Andrea Kilday",
            jobTitle: "Founder & Head Instructor",
            description:
                "2016 Rio Olympian, Oceania Gold Medallist, and 3rd Dan Black Belt WT Lv 2 certified.",
            award: [
                "2016 Rio Olympics Participant (-49kg)",
                "Oceania Olympic Qualifier Gold Medallist (2016)",
                "Pacific Games Gold Medallist (2015)",
                "Oceania Championships Gold Medallist (2007)",
            ],
        },
    },
});

const headContent = `<script type="application/ld+json">${aboutSchema}<\/script>`;
---

<Layout {title} {description} {headContent}>
    <!-- Page Hero -->
    <section
        class="min-h-[50vh] flex items-center justify-center bg-deep-space-black relative overflow-hidden pt-24 pb-16"
    >
        <div
            class="absolute inset-0 bg-gradient-to-b from-blue-belt-start/10 to-transparent pointer-events-none"
        >
        </div>
        <div class="container mx-auto px-4 text-center relative z-10 max-w-4xl">
            <p
                class="text-blue-belt-end font-bold tracking-widest uppercase text-sm mb-4"
            >
                Our Story
            </p>
            <h1
                class="text-5xl md:text-7xl font-black font-oswald uppercase tracking-tighter text-white leading-none mb-6"
            >
                About <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-blue-belt-start to-blue-belt-end"
                    >Superior</span
                > Taekwondo
            </h1>
            <p
                class="text-xl text-gray-300 font-body max-w-2xl mx-auto leading-relaxed"
            >
                We are not just another martial arts school. We are a
                performance-driven club built on Olympic-level experience and a
                genuine commitment to developing every student ‚Äî from age 4 to
                adult.
            </p>
        </div>
    </section>

    <TrustBar />

    <!-- Mission Section -->
    <section class="py-24 bg-black">
        <div
            class="container mx-auto px-4 max-w-5xl grid lg:grid-cols-2 gap-16 items-center"
        >
            <div class="space-y-6">
                <h2
                    class="text-4xl font-black font-oswald uppercase tracking-tight text-white"
                >
                    Our Mission
                </h2>
                <p class="text-gray-300 text-lg leading-relaxed font-body">
                    Superior Taekwondo exists to make Olympic-standard Taekwondo
                    accessible to every family in North West Auckland. We
                    believe that martial arts is not a luxury ‚Äî it is a life
                    skill that builds confidence, discipline, and resilience
                    that carries through everything a student does.
                </p>
                <p class="text-gray-300 leading-relaxed font-body">
                    Every class we run ‚Äî whether it is <a
                        href="/classes/tiny-tigers"
                        class="text-blue-belt-end hover:underline"
                        >Tiny Tigers</a
                    > for four-year-olds or <a
                        href="/classes/competition"
                        class="text-blue-belt-end hover:underline"
                        >Competition Team</a
                    > training ‚Äî is built on the same foundation: high standards,
                    genuine care, and the belief that every student can become a
                    champion in the dojo and in life.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 pt-2">
                    <Button href="/contact" variant="primary"
                        >Book a Free Trial</Button
                    >
                    <Button href="/classes/general" variant="secondary"
                        >View Classes</Button
                    >
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
                {
                    [
                        {
                            icon: "ü•á",
                            label: "Olympic Coach",
                            desc: "2016 Rio Games",
                        },
                        {
                            icon: "üèÖ",
                            label: "Oceania Gold",
                            desc: "Olympic Qualifier 2016",
                        },
                        {
                            icon: "üèÜ",
                            label: "Top Club",
                            desc: "Auckland Competition",
                        },
                        {
                            icon: "ü•ã",
                            label: "Lv 2 Cert WT Coach",
                            desc: "World Taekwondo",
                        },
                    ].map((stat) => (
                        <div class="bg-white/5 border border-blue-belt-end/20 rounded-2xl p-6 text-center">
                            <div class="text-3xl mb-2">{stat.icon}</div>
                            <div class="font-oswald font-bold uppercase text-white text-sm tracking-wider">
                                {stat.label}
                            </div>
                            <div class="text-gray-400 text-xs mt-1">
                                {stat.desc}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Founder Section -->
    <section class="py-24 bg-deep-space-gradient">
        <div
            class="container mx-auto px-4 max-w-5xl grid lg:grid-cols-2 gap-16 items-center"
        >
            <!-- Image -->
            <div
                class="relative h-[500px] bg-black/90 rounded-none overflow-hidden shadow-[0_0_50px_rgba(0,31,63,0.5)] border-l-4 border-blue-belt-end"
            >
                <img
                    src="/images/andrea1.webp"
                    alt="Andrea Kilday ‚Äî 2016 Rio Olympian and Founder of Superior Taekwondo"
                    class="absolute inset-0 w-full h-full object-contain object-center"
                />
                <div
                    class="absolute top-4 right-4 bg-blue-belt-end/90 text-black font-bold font-oswald text-sm uppercase px-3 py-1.5 rounded-full tracking-wider"
                >
                    ü•á 2016 Rio Olympian
                </div>
            </div>
            <!-- Text -->
            <div class="space-y-6">
                <h2
                    class="text-4xl font-black font-oswald uppercase tracking-tight text-white"
                >
                    Andrea Kilday<br />
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-belt-start to-blue-belt-end text-2xl"
                        >Founder & Head Instructor</span
                    >
                </h2>
                <p class="text-gray-300 leading-relaxed font-body">
                    Andrea Kilday's story is one of perseverance. After
                    qualifying for the Beijing 2008 Olympics but not being
                    selected, most would have stopped. Andrea trained harder.
                    Eight years later, she stood on the podium at the Oceania
                    Olympic Qualifier ‚Äî winning Gold and earning her place at
                    the <strong class="text-white">Rio 2016 Olympics</strong>.
                </p>
                <p class="text-gray-300 leading-relaxed font-body">
                    That journey ‚Äî from setback to Olympic glory ‚Äî is the
                    philosophy behind everything we do at Superior Taekwondo. We
                    teach students not just to kick and punch, but to persist,
                    adapt, and rise. Every class Andrea teaches carries the
                    weight of that experience.
                </p>
                <ul
                    class="space-y-3 font-oswald font-bold uppercase tracking-wider text-gray-200 text-sm"
                >
                    {
                        [
                            "2016 Rio Olympics ‚Äî -49kg Division",
                            "Oceania Olympic Qualifier ‚Äî Gold Medallist (2016)",
                            "Pacific Games ‚Äî Gold Medallist (2015)",
                            "Oceania Championships ‚Äî Gold Medallist (2007)",
                            "3rd Dan Black Belt ‚Äî Lv 2 Cert WT Coach",
                        ].map((cred) => (
                            <li class="flex items-center gap-3">
                                <span class="text-blue-belt-end">‚òÖ</span> {cred}
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>
    </section>

    <!-- Values Section -->
    <section class="py-24 bg-black">
        <div class="container mx-auto px-4 max-w-5xl">
            <div class="text-center mb-16">
                <p
                    class="text-blue-belt-end font-bold tracking-widest uppercase text-sm mb-4"
                >
                    What We Stand For
                </p>
                <h2
                    class="text-4xl md:text-5xl font-black font-oswald uppercase tracking-tighter text-white"
                >
                    Our Core Tenets
                </h2>
            </div>
            <div class="grid md:grid-cols-3 gap-8">
                {
                    [
                        {
                            title: "Courtesy",
                            korean: "ÏòàÏùò ‚Äî Ye-Ui",
                            desc: "Respect for your instructor, training partners, and yourself. Courtesy is the foundation of every relationship inside and outside the dojang.",
                        },
                        {
                            title: "Integrity",
                            korean: "ÏóºÏπò ‚Äî Yeom-Chi",
                            desc: "Doing the right thing when no one is watching. Integrity is what separates a champion from everyone else.",
                        },
                        {
                            title: "Perseverance",
                            korean: "Ïù∏ÎÇ¥ ‚Äî In-Nae",
                            desc: "Andrea's story is living proof. Never stop. The belt is not the destination ‚Äî the person you become in pursuit of it is.",
                        },
                        {
                            title: "Self-Control",
                            korean: "Í∑πÍ∏∞ ‚Äî Geuk-Gi",
                            desc: "Physical power without mental control is dangerous. We develop both in equal measure.",
                        },
                        {
                            title: "Indomitable Spirit",
                            korean: "Î∞±Ï†àÎ∂àÍµ¥ ‚Äî Baek-Jeol-Bul-Gul",
                            desc: "This tenet defines who we are. When things are hard, we press forward. It is the most important lesson of Taekwondo.",
                        },
                        {
                            title: "Excellence",
                            korean: "Superior Standard",
                            desc: "Olympic coaching means Olympic standards. We expect every student to bring their best ‚Äî and we will always bring ours.",
                        },
                    ].map((tenet) => (
                        <div class="bg-white/5 border border-white/10 hover:border-blue-belt-end/40 rounded-2xl p-8 transition-all duration-300">
                            <h3 class="text-2xl font-black font-oswald uppercase tracking-tight text-white mb-1">
                                {tenet.title}
                            </h3>
                            <p class="text-blue-belt-end text-xs font-mono mb-4">
                                {tenet.korean}
                            </p>
                            <p class="text-gray-400 text-sm leading-relaxed">
                                {tenet.desc}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Locations CTA -->
    <section class="py-24 bg-deep-space-gradient">
        <div class="container mx-auto px-4 max-w-4xl text-center">
            <h2
                class="text-4xl font-black font-oswald uppercase tracking-tight text-white mb-6"
            >
                Three Locations. One Standard.
            </h2>
            <p class="text-gray-300 text-lg mb-10 max-w-2xl mx-auto font-body">
                We run classes across North West Auckland so that everyone in
                the region has access to Olympic-level instruction ‚Äî no matter
                where you live.
            </p>
            <div
                class="flex flex-wrap gap-4 justify-center text-sm font-oswald font-bold uppercase tracking-wider mb-10"
            >
                {
                    ["Helensville", "Kaukapakapa", "Waimauku"].map((loc) => (
                        <a
                            href={`/locations/${loc.toLowerCase()}`}
                            class="border border-blue-belt-end/30 hover:border-blue-belt-end text-gray-200 hover:text-blue-belt-end px-6 py-3 rounded-full transition-all duration-300"
                        >
                            üìç {loc}
                        </a>
                    ))
                }
            </div>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <Button href="/contact" variant="primary"
                    >Book Your Free Trial</Button
                >
                <Button href="http://superior-taekwondo.gymdesk.com/schedule" variant="secondary"
                    >View Class Schedule</Button
                >
            </div>
        </div>
    </section>

    <Footer />
</Layout>
